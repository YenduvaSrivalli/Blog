<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Posts</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .content-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .admin-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: var(--gray--light);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
            max-width: 800px; /* Adjust as needed */
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
        }

        .admin-title h2 {
            margin: 0;
            color: #333;
        }

        .admin-title .button {
            background-color: black;
            color: #fff;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
        }

        .admin-title .button:hover {
            background-color: gray;
        }

        .admin-posts {
            list-style: none;
            padding: 0;
            margin: 0;
            max-width: 800px; /* Adjust as needed */
            width: 100%;
        }

        .admin-posts li {
            background: var(--gray--light);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
            padding: 15px;
            margin-bottom: 10px;
            position: relative;
        }

        .admin-posts a {
            color: black;
            text-decoration: none;
            font-size: 1.2em;
        }

        .admin-posts a:hover {
            text-decoration: underline;
        }

        .admin-post-controls {
            margin-top: 10px;
        }

        .admin-post-controls .btn {
            background-color: black;
            color: #fff;
            padding: 5px 10px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.9em;
            margin-right: 5px;
        }

        .admin-post-controls .btn:hover {
            background-color: gray;
        }

        .admin-post-controls .btn-delete {
            background-color: #dc3545;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            color: #fff;
        }

        .admin-post-controls .btn-delete:hover {
            background-color: #c82333;
        }
        h3{
          font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <div class="admin-title">
            <h3>POSTS</h3>
            <a href="/add-post" class="button">+ Add New</a>
        </div>

        <ul class="admin-posts">
            <% data.forEach(post => { %>
                <li>
                    <a href="/post/<%= post._id %>">
                        <%= post.title %> &nearr;
                    </a>
                    <div class="admin-post-controls">
                        <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>

                        <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                            <input type="submit" value="Delete" class="btn-delete btn">
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
